@using RestaurantInfo.Core
@model Restaurant

<div class="card text-secondary bg-light mb-3" style="max-width: 18rem">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn bg-light"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
           <img src="~/info.svg" />
        </a>
        <a class="btn bg-light"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
           <img src="~/pencil.svg" />
        </a>
        <a class="btn btn-outline-danger"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
           <img src="~/trashcan.svg" />
        </a>
    </div>
</div>
