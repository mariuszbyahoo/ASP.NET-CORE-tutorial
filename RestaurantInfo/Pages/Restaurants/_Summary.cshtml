@using RestaurantInfo.Core
@model Restaurant

<div class="card text-secondary bg-light mb-3" style="max-width: 18rem">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn badge-info"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            Details
        </a>
        <a class="btn badge-info"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            Edit
        </a>
        <a class="btn badge-danger"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            Delete
        </a>
    </div>
</div>
